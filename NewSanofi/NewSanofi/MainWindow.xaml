                    <!-- Affair -->
                    <Grid Name="AffairGrid" Grid.Column="1" Visibility="Visible">
                        <Label Content="Lỗi sự vụ" Padding="5,5" BorderThickness="0,0,2,2" BorderBrush="Gray" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                        <Grid VerticalAlignment="top" Margin="0,50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Mã Bưu Cục" Margin="5,0,0,10" Padding="0,5,0,0"/>
                            <TextBox Margin="10,0,10,10" Width="100" HorizontalAlignment="Left" Padding="0,0,0,0" Text="{Binding PostCodeLock,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"  />
                            <TextBlock Text="Mã Bưu Kiện" Margin="5,0,0,10" Grid.Row="1" Padding="0,5,0,0"/>
                            <TextBox Margin="10,0,10,10" Padding="0,0,0,0"  Grid.Column="1" Grid.Row="1" Text="{Binding ItemCode,UpdateSourceTrigger=PropertyChanged}"  />
                            <TextBlock Text="Số Lô" Margin="5,0,0,10" Grid.Row="2" Padding="0,5,0,0"/>
                            <TextBox Margin="10,0,10,10" Padding="0,0,0,0" Grid.Row="2" Grid.Column="1" Text="{Binding BatchCode,UpdateSourceTrigger=PropertyChanged}" />

                            <Button Grid.Row="3" Grid.ColumnSpan="2" Margin="0,20" Command="{Binding AffairExecuteCommand}" Width="100" Height="50" Foreground="White"  Opacity="0.8" Content="Xử Lý"/>
                        </Grid>
                        
                        
                    </Grid>


                </Grid>

                


            </TabItem>
        </TabControl>





    </Grid>
   


</Window>
